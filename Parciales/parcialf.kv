#!/usr/bin/python
# -*- coding: 850 -*-
ScreenManager:
	nomb:"" + entrada.text	
	Screen:
		name:'principal'
		canvas:
        	Color:
            	rgba: 37/255., 39/255., 30/255., 1
        	Rectangle:
            	pos: self.pos
            	size: self.size
    	Label:
        	text:
            	(U'[b]Nombre [/b]')
        	markup: True
        	font_size: 30      
        	size_hint:(None, None)
        	size:(300, 30)
        	pos_hint:{'center_x': .3 , 'center_y': .8}
		TextInput:
			id: entrada
			font_name: 'britanic.ttf'
			size_hint:(None, None)
			size: (300, 30)
        	pos_hint:{'center_x': .6,'center_y': .8}
		
    
    	Button:
        	text: 'SIGUIENTE'
        	size_hint:(None, None)
        	size:(250, 50)
        	pos_hint:{'center_x': .5,'center_y': .20}
        	on_press: 
            	root.current = 'nombre'
    Screen:
        name:'nombre'
        canvas:
        	Color:
            	rgba: 37/255., 39/255., 30/255., 1
        	Rectangle:
            	pos: self.pos
            	size: self.size

        Label:
            text: 'Hola '+root.nomb
            font_size: 50      
            size_hint:(None, None)
            size:(300, 50)
            pos_hint:{'center_x': .5 , 'center_y': .7}
		
        Button:
        	text: 'VOLVER'
        	size_hint:(None, None)
        	size:(250, 50)
        	pos_hint:{'center_x': .5,'center_y': .20}
        	on_press: 
            	root.current = 'principal'
            